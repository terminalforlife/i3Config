#!/bin/bash

#----------------------------------------------------------------------------------
# Project Name      - $HOME/.i3a/use_dmenu
# Started On        - Sat 23 Sep 14:47:51 BST 2017
# Last Change       - Sun 28 Jan 02:14:05 GMT 2018
# Author E-Mail     - terminalforlife@yahoo.com
# Author GitHub     - https://github.com/terminalforlife
#----------------------------------------------------------------------------------
# You may need to install the Debian/Ubuntu 'suckless-tools' package.
#
# #BBGGYY (B = blue, G = green, Y = yellow)
# #ffffff = white  |  #000000 = black
#
# See man 1 dmenu for more information.
#
# Use comments to {en,dis}able the style you want. The top one is my own, but the
# rest I took from various places online, because they seemed cool.
#------------------------------------------------------------------------DMENU HERE

[ $UID -eq 0 ] && exit 1

MASTER="alsa_input.usb-Burr-Brown_from_TI_USB_Audio_CODEC-00.analog-stereo"
SOUND05="$HOME/.config/i3/Sounds/SND03.wav"
	
[ -x /usr/bin/dmenu_run -a -x /usr/bin/pactl -a -f "$SOUND05" ] && {
	/usr/bin/paplay --volume 40000 "$SOUND05" & disown

	/usr/bin/dmenu_run -b -fn "Nimbus Mono L":style=Bold:size=16 -nb \#000000\
		-nf \#ffffff -sb \#333333 -sf \#ffffff
}
