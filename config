bindsym XF86AudioLowerVolume exec --no-startup-id /bin/bash $HOME/.i3a/sink_lower
bindsym XF86AudioMute exec --no-startup-id /bin/bash $HOME/.i3a/sink_mute
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id /bin/bash $HOME/.i3a/source_raise
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id /bin/bash $HOME/.i3a/source_lower
bindsym Shift+XF86AudioMute exec --no-startup-id /bin/bash $HOME/.i3a/source_mute
bindsym Shift+Mod1+XF86AudioLowerVolume exec --no-startup-id /bin/bash $HOME/.i3a/hush_the_mic
bindsym XF86Calculator exec --no-startup-id /usr/bin/xcalc
bindsym Print exec --no-startup-id /bin/bash $HOME/.i3a/scrot_take
bindsym Shift+Print exec --no-startup-id /bin/bash $HOME/.i3a/scrot_sel_take
bindsym Mod4+Print exec --no-startup-id /bin/bash $HOME/.i3a/scrot_sel_take --lite
bindsym Ctrl+Shift+Print exec --no-startup-id /bin/bash $HOME/.i3a/scrot_win_take
