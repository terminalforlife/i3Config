#------------------------------------------------MEDIA PLAYBACK CONTROL (AUDACIOUS)

bindsym XF86AudioNext exec --no-startup-id /usr/bin/audtool --playlist-advance
bindsym XF86AudioPrev exec --no-startup-id /usr/bin/audtool --playlist-reverse
bindsym Mod4+XF86AudioNext exec --no-startup-id /usr/bin/audtool --playback-seek-relative +10
bindsym Mod4+XF86AudioPrev exec --no-startup-id /usr/bin/audtool --playback-seek-relative -10
bindsym XF86AudioPlay exec --no-startup-id /usr/bin/audtool --playback-playpause

#------------------------------------------------------------SESSION INITIALIZATION

exec --no-startup-id /bin/bash $HOME/.i3a/initialize
