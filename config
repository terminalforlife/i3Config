#------------------------------------------------------MEDIA PLAYBACK CONTROL (MOC)

bindsym Mod4+p exec --no-startup-id /bin/bash $HOME/.i3a/track_notify
bindsym Mod4+XF86AudioNext exec --no-startup-id /usr/bin/mocp --seek +3
bindsym Mod4+XF86AudioPrev exec --no-startup-id /usr/bin/mocp --seek -3
bindsym XF86AudioPlay exec --no-startup-id /usr/bin/mocp -G
bindsym XF86AudioNext exec --no-startup-id /usr/bin/mocp --next
bindsym XF86AudioPrev exec --no-startup-id /usr/bin/mocp --previous

